# Qloo AI Concierge Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenRouter API Key for LLM access
# Get your key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Qloo API Key for cultural intelligence
# Get your key from: https://qloo.com/
QLOO_API_KEY=your_qloo_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Qloo API Base URL (default: https://hackathon.api.qloo.com)
QLOO_BASE_URL=https://hackathon.api.qloo.com

# Hotel Configuration
HOTEL_NAME=Grand Hotel Istanbul
HOTEL_LOCATION=Istanbul, Turkey

# LLM Configuration
LLM_MODEL=openrouter/horizon-beta
MAX_TOKENS=1000
TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (set to true for development)
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your .env file to version control
# 2. Keep your API keys secure and don't share them
# 3. Use different keys for development and production
# 4. Rotate your API keys regularly for security
